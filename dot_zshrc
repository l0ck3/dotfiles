# History settings
HISTSIZE="10000"
SAVEHIST="10000"
HISTFILE="$HOME/.zsh_history"
setopt SHARE_HISTORY
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_SAVE_NO_DUPS

# Completion
autoload -U compinit && compinit

# PATH
export PATH="/Users/l0ck3/.bun/bin:/Users/l0ck3/.local/bin:$PATH"
export ERL_AFLAGS="-kernel shell_history enabled"

# Mise activation (replaces Nix tool paths)
eval "$(/opt/homebrew/bin/mise activate zsh)"

# Tool integrations - use brew paths, NOT /nix/store/
source <(/opt/homebrew/bin/fzf --zsh)
eval "$(/opt/homebrew/bin/atuin init zsh --disable-up-arrow)"
eval "$(/opt/homebrew/bin/zoxide init zsh)"
source <(/opt/homebrew/bin/carapace _carapace)
eval "$(/opt/homebrew/bin/starship init zsh)"

# Aliases (from zsh.nix - REMOVED switch!)
alias k="kubectl"
alias reload!="source ~/.zshrc"
alias gst="git status"
alias cd="z"
